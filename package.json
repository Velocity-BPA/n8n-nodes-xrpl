{
  "name": "n8n-nodes-xrpl",
  "version": "1.2.0",
  "description": "n8n community node for XRPL (XRP Ledger) API integration",
  "keywords": [
    "n8n-community-node-package",
    "xrpl",
    "xrp",
    "ledger",
    "blockchain",
    "cryptocurrency"
  ],
  "license": "BSL-1.1",
  "homepage": "https://github.com/velocity-bpa/n8n-nodes-xrpl",
  "author": {
    "name": "Velocity BPA",
    "email": "support@velocitybpa.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/velocity-bpa/n8n-nodes-xrpl.git"
  },
  "engines": {
    "node": ">=18.10",
    "pnpm": ">=8.1"
  },
  "packageManager": "pnpm@8.1.0",
  "main": "dist/index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials package.json",
    "lintfix": "eslint nodes credentials package.json --fix",
    "prepublishOnly": "pnpm build && pnpm lint -o .eslintcache && pnpm test",
    "test": "jest"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/XRPLApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/XRPL/XRPL.node.js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^18.16.16",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "eslint-plugin-n8n-nodes-base": "^1.11.0",
    "gulp": "^4.0.2",
    "jest": "^29.6.1",
    "n8n-workflow": "^1.0.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "n8n-workflow": "^1.0.0"
  },
  "dependencies": {
    "n8n-core": "^1.0.0",
    "n8n-workflow": "^1.0.0",
    "xrpl": "^2.7.0"
  }
}